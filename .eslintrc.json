{
    "parser": "typescript-eslint-parser",
    "extends": [
       "eslint:recommended",
       "plugin:react/recommended"
    ],
    "parserOptions": {
       "ecmaVersion": 2017,
       "sourceType": "module"
    },
    "env": {
       "browser": true,
       "node": true,
       "es6": true
    },
    "globals": {
       "App": true
    },
    "rules": {
       "react/jsx-uses-react": "off",
       "react/react-in-jsx-scope": "off"
    }
}
